<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="XFTest.NetStandard.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ImageSourceConverter x:Key="ImageSourceConverter" />
            <Thickness
                x:Key="PagePadding"
                Bottom="10"
                Left="10"
                Right="10"
                Top="20" />
            <Style x:Key="ContentPageTabbedStyle" TargetType="ContentPage">
                <Setter Property="Padding" Value="{StaticResource PagePadding}" />
                <Setter Property="Icon">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="FileImageSource">
                            <On Platform="iOS">Search</On>
                            <On Platform="Android" />
                            <On Platform="Windows">Search</On>
                        </OnPlatform>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>